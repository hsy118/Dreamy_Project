<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.ssafy.Dreamy.model.mapper.MylistMapper">

	<select id="getMyBoardList" parameterType="int" resultType="com.ssafy.Dreamy.model.BoardDto">
		select * from Board where uid=#{uid}
	</select>
	
	<select id="getMyParticipateList" parameterType="int" resultType="com.ssafy.Dreamy.model.BoardDto">
		select * from Board where pid IN (select pid from Participate where uid=#{uid})
	</select>

</mapper>